extends layout

block content
    doctype html
    html
        head
            title All Utentes
            a(href="/read")
                h1.titulo_inicial Consultar Dados / Consultar Utentes
        body
            h1 Detalhes de Utente
            h2= 'Utente: ' + utente.nome
            p Utente ID: #{utente.id_utente}
            p Nome: #{utente.nome}
            p Apelido: #{utente.apelido}
            p Idade: #{utente.idade}
            p Sexo: #{utente.sexo}
            p Localidade: #{utente.localidade}
            p Email: #{utente.email}
            p Numsaude: #{utente.numsaude}
