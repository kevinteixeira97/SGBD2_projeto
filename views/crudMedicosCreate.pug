extends layout

block content

    doctype html
    html
        head
            title Create
            a(href="/create")
                h1.titulo_inicial Criar Dados / Criar Médico

        body
            h1 Crie um novo Médico
            form(method='POST', action='/medicos/create')
                label(for='id_medico') ID Médico:
                input#id_medico(type='number', name='id_medico', required)
                br

                label(for='nome') Nome:
                input#nome(type='text', name='nome', required)

                br

                label(for='apelido') Apelido:
                input#apelido(type='text', name='apelido', required)


                br
                label(for='idade') Idade:
                input#idade(type='number', name='idade', required)


                br
                label(for='sexo') Sexo:
                input#sexo(type='text', name='sexo', required)


                br
                label(for='localidade') Localidade:
                input#localidade(type='text', name='localidade', required)


                br
                label(for='email') Email:
                input#email(type='email', name='email', required)

                br

                label(for='especialidade_id') Especialidade ID:
                input#especialidade_id(type='number', name='especialidade_id', required)

                br

                input(type='submit', value='Submit')
